{% include 'incl/header.twig' %}

<body>
    <div class="wrapper">
        <div class="parallax-container">
            <div></div>
            <div></div>
        </div>

        {% include 'incl/nav.twig' %}

        <div class="main" role="main">
            {# <ul>
                {% for key, value in meta %}
                <li>{{ key }} - {{ value }}</li>
                {% endfor %}
            </ul> #}
            <div style="text-align: center;">
                {{ content }}
            </div>
            <div class="gallerypage">

                {% for image_name in meta['Files']|split(',') %}
                {% set image_url = "image/" ~ meta['Directory'] ~ image_name %}
                <a href="{{image_url}}">
                    <picture>
                        <source media="(max-width: 768px)" srcset="{{image_url}}?w=1000&h=1000&crop-to-fit">
                        <img src="{{image_url}}?w=400&h=400&crop-to-fit" class="gallery-image" />
                    </picture>
                </a>
                {% endfor %}
            </div>
            {% if meta['Youtube'] %}
            <div class="embed-container">
                <iframe src="{{meta['Youtube']}}" frameborder="0" allowfullscreen></iframe>
            </div>
            {% endif %}
        </div>
        <div class="diamond-backdrop"></div>

        {% include 'incl/footer.twig' %}
    </div>
</body>

</html>